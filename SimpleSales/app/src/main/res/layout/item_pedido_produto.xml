<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/item_nome_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="Produto 01"
        />

    <TextView
        android:id="@+id/label_quantidade_produto"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:text="Qtd.:"
        app:layout_constraintTop_toBottomOf="@id/item_nome_produto"
        app:layout_constraintStart_toStartOf="@id/item_nome_produto"
        app:layout_constraintEnd_toEndOf="@id/item_nome_produto"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <TextView
        android:id="@+id/item_quantidade_produto_valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/label_quantidade_produto"
        app:layout_constraintBottom_toBottomOf="@id/label_quantidade_produto"
        app:layout_constraintTop_toTopOf="@+id/label_quantidade_produto"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="0"
        />


    <TextView
        android:id="@+id/label_item_valor"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Vlr.:"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_quantidade_produto"
        app:layout_constraintStart_toStartOf="@id/label_quantidade_produto"
        app:layout_constraintHorizontal_bias="0.0"
        />


    <TextView
        android:id="@+id/item_valor_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/label_item_valor"
        app:layout_constraintBottom_toBottomOf="@id/label_item_valor"
        app:layout_constraintTop_toTopOf="@+id/label_item_valor"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="0"
        />


    <TextView
        android:id="@+id/label_item_valor_total"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Vlr.Total.:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_valor_produto"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintTop_toTopOf="@id/item_valor_produto"
        />

    <TextView
        android:id="@+id/item_valor_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toEndOf="@+id/label_item_valor_total"
        app:layout_constraintBottom_toBottomOf="@id/label_item_valor_total"
        app:layout_constraintTop_toTopOf="@+id/label_item_valor_total"
        app:layout_constraintHorizontal_bias="0.0"
        tools:text="0"
        />



</androidx.constraintlayout.widget.ConstraintLayout>